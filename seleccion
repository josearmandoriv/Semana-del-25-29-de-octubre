#include <stdio.h> 
#include <conio.h>
void OrdenarSeleccion (double v[ ], int N);
int main ()
{
	 double v[]={8, 23, 78, 8, 32, 56};
	 int i;
	 for (i=0;i<6;i++){
	 	printf("%f", v[i]);
	 	OrdenarSeleccion(v, 6); 
	 }
	 getch();
	 return 0;
}  

void OrdenarSeleccion (double v[6], int N)
{
int i, j, pos_min;
double tmp;
for (i=0; i<N-1; i++) {
pos_min = i;
for (j=i+1; j<N; j++)
if (v[j]<v[pos_min])
pos_min = j;
tmp=v[i];
v[i]=v[pos_min];
v[pos_min]=tmp; 
}
}
